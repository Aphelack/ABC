build:
    nasm -f bin -o build/boot.bin boot.nasm

run: build
    @echo "=== Lab 3: Advanced Multitasking ==="
    @echo "Bootloader output:"
    @echo ""
    @echo "" | timeout 5 qemu-system-x86_64 -drive file=build/boot.bin,format=raw -serial stdio -display none || true
    @echo ""
    @echo "=== Lab 3 execution completed ==="

clean:
    rm -rf build/*

demo: run